{
  "ConnectionStrings": {
    "Default": "Data Source=${DB_CONNECTION:app.db}"
  },
  "Email": {
    "Host": "${SMTP_HOST:smtp.gmail.com}",
    "Port": "${SMTP_PORT:587}",
    "User": "${SMTP_USER:your@email.com}",
    "Pass": "${SMTP_PASS:changeme}",
    "From": "${SMTP_FROM:your@email.com}",
    "FromName": "${SMTP_FROMNAME:Photo Requests}"
  },
  "Jwt": {
    "Key": "${JWT_KEY:supersecretkey}",
    "Issuer": "${JWT_ISSUER:photo-requests}",
    "Audience": "${JWT_AUDIENCE:photo-requests}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  }
}
